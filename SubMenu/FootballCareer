<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Story Choices Adventure Game</title>
    <link rel="stylesheet" href="/CSS/Game Site/Adventure.css" />
  </head>
  <body>
    <div id="gameContainer">
      <h1>Adventure Awaits!</h1>
      <p id="story">Your adventure is about to start.</p>
      <div id="choices">
        <!-- Choices will be populated by JavaScript -->
      </div>
      <button id="startGame">Play</button>
    </div>
    <script>
      // Define the game data
      const gameData = {
        start: {
          text: "You wake up in a mysterious forest. Do you go left or right?",
          options: [
            { text: "Go left", nextStep: "leftPath" },
            { text: "Go right", nextStep: "rightPath" },
          ],
        },
        leftPath: {
          text: "You take the left path and encounter a troll.",
          options: [
            { text: "Try to run away", nextStep: "runAway" },
            { text: "Talk to the troll", nextStep: "talkTroll" },
          ],
        },
        // Continue adding steps here...
      };

      // Function to start the game
      function startGame() {
        showTextNode("start");
      }

      // Function to show a text node
      function showTextNode(step) {
        const textNode = gameData[step];
        const textElement = document.getElementById("story");
        textElement.innerText = textNode.text;
        const choicesContainer = document.getElementById("choices");
        choicesContainer.innerHTML = ""; // Clear previous choices

        // Create buttons for each choice
        textNode.options.forEach((option) => {
          const button = document.createElement("button");
          button.innerText = option.text;
          button.classList.add("choice-button");
          button.addEventListener("click", () => showTextNode(option.nextStep));
          choicesContainer.appendChild(button);
        });
      }

      // Start game when the play button is clicked
      const startButton = document.getElementById("startGame");
      startButton.addEventListener("click", startGame);

      // Optionally, hide the play button after the game starts
      startButton.addEventListener("click", () => {
        startButton.style.display = "none";
      });
    </script>
  </body>
</html>
